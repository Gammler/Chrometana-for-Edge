{
  "manifest_version": 2,

  "name": "Chrometana",
  "description": "Because Cortana - Bing = Nirvana",
  "version": "0.1.1",

  "options_page": "html/options.html",
  "permissions": [
        "*://www.bing.com/",
        "webRequest",
        "webRequestBlocking",
        "storage"
  ],
  "background": {
    "scripts": ["js/bootstrap.js"]
  },
  "page_action": {
    "default_title": "Chrometana"
  }

}